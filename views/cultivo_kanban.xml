<odoo>
    <record id="view_cultivo_cultivo_kanban" model="ir.ui.view">
        <field name="name">cultivo.cultivo.kanban</field>
        <field name="model">cultivo.cultivo</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="stage_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <field name="campo_id" />
                                <field name="cultivo_id" />
                                <field name="rendimiento_estimado" />
                                <field name="stage_id" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
