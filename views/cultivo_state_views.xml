<odoo>
    <record id="view_cultivo_state_form" model="ir.ui.view">
        <field name="name">cultivo.state.form</field>
        <field name="model">cultivo.state</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_cultivo_state_tree" model="ir.ui.view">
        <field name="name">cultivo.state.tree</field>
        <field name="model">cultivo.state</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_agro_configuracion_estados" name="Estados de Cultivos"
              parent="menu_agro_configuracion_root"
              action="action_configurar_estados"/>
</odoo>