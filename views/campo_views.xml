<odoo>
    <record id="view_campo_form" model="ir.ui.view">
        <field name="name">cultivo.campo.form</field>
        <field name="model">cultivo.campo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="area"/>
                        <field name="tipo_suelo"/>
                        <field name="localizacion"/>
                        <field name="rendimiento_historico"/>
                        <field name="fecha_ultima_siembra"/>
                        <field name="estado_cultivo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_campo_tree" model="ir.ui.view">
        <field name="name">cultivo.campo.tree</field>
        <field name="model">cultivo.campo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="area"/>
                <field name="estado_cultivo"/>
            </tree>
        </field>
    </record>
</odoo>
